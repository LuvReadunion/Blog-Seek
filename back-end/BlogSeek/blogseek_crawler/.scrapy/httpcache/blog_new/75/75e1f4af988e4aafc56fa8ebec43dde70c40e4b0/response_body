&lt;h2 id=&#34;编译方法&#34;&gt;编译方法&lt;/h2&gt;
&lt;pre&gt;&lt;code&gt;yum install -y rpm-build rpmdevtools readline-devel ncurses-devel gdbm-devel tcl-devel openssl-devel db4-devel byacc libyaml-devel libffi-devel make glibc-devel gcc checksec cmake  autoconf git multilib-rpm-config systemtap-sdt-devel
rpmdev-setuptree
rpmbuild -ba ruby.spec --nocheck --define=&amp;quot;dist .el7&amp;quot;
ARCH=`uname -m`
KERNEL_REL=`uname -r`
KERNEL_TMP=${KERNEL_REL%.$ARCH}
DISTRIB=${KERNEL_TMP##*.}
